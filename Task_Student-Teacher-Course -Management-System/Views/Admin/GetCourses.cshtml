@model IEnumerable<Task_Student_Teacher_Course__Management_System.Models.Course>

@{
    ViewData["Title"] = "GetCourses";
}
@* for sweet alert  *@
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<h1>GetCourses</h1>

<p>
    <a asp-action="AddCourse" asp-controller="Admin" class="btn btn-primary">Create New Course</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseFee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeacherName)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseFee)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TeacherName)
                </td>
            <td>
                    <a asp-action="EditCourse" asp-route-id="@item.CourseId" class="btn btn-info">Edit</a>
                    <a asp-action="DeleteCourse" asp-route-id="@item.CourseId" class="btn btn-danger deleteButton">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script>
    document.querySelectorAll('.deleteButton').forEach(button => {
        button.addEventListener('click', function (event) {
            event.preventDefault();
            const href = this.getAttribute('href');
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, Delete this Course!'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire(
                        'Deleted!',
                        'This Course has been deleted.',
                        'success'
                    ).then(() => {
                        window.location.href = href;
                    });
                }
            })
        });
    });
</script>