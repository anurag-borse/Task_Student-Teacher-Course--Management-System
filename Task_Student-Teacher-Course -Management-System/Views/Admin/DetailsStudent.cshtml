@model Task_Student_Teacher_Course__Management_System.Models.View_Models.StudentDetailsViewModel

@{
    ViewData["Title"] = "Student Details";
}

<h1>Student Details</h1>

<div class="form-group row" style="margin-top:4px">

    <label class="col-sm-2 col-form-label">>First Name:</label>

    <div class="col-sm-10">
        <input asp-for="FirstName" class="form-control" readonly />
    </div>
</div>

<div class="form-group row" style="margin-top:4px">

    <label class="col-sm-2 col-form-label">Last Name:</label>

    <div class="col-sm-10">
        <input asp-for="LastName" class="form-control" readonly />
    </div>
</div>


<div class="form-group row" style="margin-top:4px">

    <label class="col-sm-2 col-form-label">Date of Birth:</label>

    <div class="col-sm-10">
        <input asp-for="DateOfBirth" class="form-control" readonly />
    </div>
</div>


<div class="form-group row" style="margin-top:4px">

    <label class="col-sm-2 col-form-label">Email:</label>

    <div class="col-sm-10">
        <input asp-for="Email" class="form-control" readonly />
    </div>
</div>


<div class="form-group row" style="margin-top:4px">

    <label class="col-sm-2 col-form-label">Image:</label>

    <div class="col-sm-10">
        <img src="@Model.StudentImageURL" height="150px" width="150px" alt="Student Image" />
    </div>
</div>







<div class="form-group row" style="margin-top:4px">

    <label class="col-sm-2 col-form-label">Courses:</label>
    <div class="col-sm-10">

        <ul>
            @foreach (var course in Model.Courses)
            {
                <li>@course</li>
            }
        </ul>
    </div>
</div>


<div class="form-group row">
    <div class="col-sm-10">


        <a asp-action="GetStudents" asp-controller="Admin" class="btn btn-primary">Back to List</a>
        <a asp-action="EditStudent" asp-controller="Admin" asp-route-id="@Model.StudentId" class="btn btn-info">Edit</a>
        <a asp-action="DeleteStudent" asp-controller="Admin" asp-route-id="@Model.StudentId" class="btn btn-danger">Delete</a>

    </div>
</div>

