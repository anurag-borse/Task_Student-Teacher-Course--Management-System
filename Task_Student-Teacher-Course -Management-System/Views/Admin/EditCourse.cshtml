@model Task_Student_Teacher_Course__Management_System.Models.Course

@{
    ViewData["Title"] = "EditCourse";
}

<h1>Edit Course</h1>
<hr />

<div class="container">
    <form asp-action="EditCourse" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CourseId" />

        <div class="form-group row" style="margin-top: 5px">
            <label class="col-sm-2 col-form-label">Course Name:</label>
            <div class="col-sm-10">
                <input asp-for="CourseName" class="form-control" />
                <span asp-validation-for="CourseName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row" style="margin-top: 5px">
            <label class="col-sm-2 col-form-label">Course Fee:</label>
            <div class="col-sm-10">
                <input asp-for="CourseFee" class="form-control" />
                <span asp-validation-for="CourseFee" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row" style="margin-top: 5px">
            <label class="col-sm-2 col-form-label">Teacher Name:</label>
            <div class="col-sm-10">
                <select asp-for="TeacherName" class="form-control">
                    <option value="NA">Select a Teacher</option>
                    @foreach (var teacher in ViewBag.Teachers)
                    {
                        <option value="@teacher.Text">@teacher.Text</option>
                    }
                </select>
                <span asp-validation-for="TeacherName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row" style="margin-top: 5px">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-action="GetCourses" asp-controller="Admin" class="btn btn-warning ml-2">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
