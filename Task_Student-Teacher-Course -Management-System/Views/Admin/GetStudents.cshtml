@model IEnumerable<Task_Student_Teacher_Course__Management_System.Models.Student>

@{
    ViewData["Title"] = "GetStudents";
}


@* for sweet alert  *@
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<link href="https://cdn.datatables.net/v/bs5/jq-3.7.0/dt-2.0.8/datatables.min.css" rel="stylesheet">

<h1>GetStudents</h1>

<div class="form-group row">
    <div class="col-sm-10">

    <a asp-action="AddStudent" asp-controller="Admin" class=" btn btn-primary">Create New</a>
    <a asp-action="GetStudents" asp-controller="Admin" class="btn btn-warning ml-2">Back to List</a>
    </div>
</div>

<form asp-action="GetStudents" method="get">
    <div class="form-group mt-2">
        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Search by FirstName, LastName, Course, StudentId">
        <button type="submit" class="btn btn-primary mt-2">Search</button>
    </div>
</form>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">StudentId</th>
            <th scope="col">FirstName</th>
            <th scope="col">LastName</th>
            <th scope="col">DateOfBirth</th>
            <th scope="col">Email</th>
            <th scope="col">Course</th>
            <th scope="col">Teacher</th>
            <th scope="col">Image</th>


            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.StudentId</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.DateOfBirth.ToString("dd-MM-yyyy")</td>
                <td>@item.Email</td>
                <td>@item.Course</td>
                <td>@item.Teacher</td>
                <td>
                    <img src="@item.StudentImageURL" height="70px" width="70px" alt="Image  " />
                </td>
                <td>
                    <a asp-controller="Admin" asp-action="EditStudent" asp-route-id="@item.StudentId" class="btn btn-info">Edit</a>

                    <a asp-controller="Admin" asp-action="DeleteStudent" asp-route-id="@item.StudentId" class="btn btn-danger deleteButton">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>



<script src="https://cdn.datatables.net/v/bs5/jq-3.7.0/dt-2.0.8/datatables.min.js"></script>


<script>
    document.querySelectorAll('.deleteButton').forEach(button => {
        button.addEventListener('click', function (event) {
            event.preventDefault();
            const href = this.getAttribute('href');
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, Delete this Student!'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire(
                        'Deleted!',
                        'This Student has been deleted.',
                        'success'
                    ).then(() => {
                        window.location.href = href;
                    });
                }
            })
        });
    });
</script>
