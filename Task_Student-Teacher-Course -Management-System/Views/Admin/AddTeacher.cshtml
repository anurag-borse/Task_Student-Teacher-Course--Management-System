@model Task_Student_Teacher_Course__Management_System.Models.Teacher

@{
    ViewData["Title"] = "AddTeacher";
}

<h1>AddTeacher</h1>

<hr />

<form asp-action="AddTeacher" asp-controller="Admin">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group row" style="margin-top:4px">
        <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row" style="margin-top:4px">
        <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row" style="margin-top:4px">
        <label asp-for="Salary" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">


            <input asp-for="Salary" class="form-control" />
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>
    </div>



    <div class="form-group row" style="margin-top:4px">
        <label class="col-sm-2 col-form-label">Course</label>
        <div class="col-sm-10">
            <select class="form-control" asp-for="Course">
                <option value="NA">Select</option>

                @foreach (var course in ViewBag.Courses)
                {
                    <option value="@course.Value">@course.Text</option>
                }
            </select>
            <span asp-validation-for="Course" class="text-danger"></span>
        </div>
    </div>




    <div class="form-group row">
        <div class="col-sm-10">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="GetTeachers" asp-controller="Admin" class="btn btn-warning ml-2">Back to List</a>
        </div>
    </div>


</form>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
