@model Task_Student_Teacher_Course__Management_System.Models.Teacher

@{
    ViewData["Title"] = "Add Teacher";
}

<h1 class="text-center my-4">Add Teacher</h1>
<hr />

<div class="container">
    <form asp-action="AddTeacher" asp-controller="Admin">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="form-group row mb-4">
            <label asp-for="FirstName" class="col-sm-2 col-form-label">First Name</label>
            <div class="col-sm-10">
                <input asp-for="FirstName" class="form-control" placeholder="Enter First Name" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-4">
            <label asp-for="LastName" class="col-sm-2 col-form-label">Last Name</label>
            <div class="col-sm-10">
                <input asp-for="LastName" class="form-control" placeholder="Enter Last Name" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-4">
            <label asp-for="Salary" class="col-sm-2 col-form-label">Salary</label>
            <div class="col-sm-10">
                <input asp-for="Salary" class="form-control" placeholder="Enter Salary" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-4">
            <label class="col-sm-2 col-form-label">Course</label>
            <div class="col-sm-10">
                <select class="form-control" asp-for="Course">
                    <option value="NA">Select a Course</option>
                    @foreach (var course in ViewBag.Courses)
                    {
                        <option value="@course.Text">@course.Text</option>
                    }
                </select>
                <span asp-validation-for="Course" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <input type="submit" value="Create" class="btn btn-primary mr-2" />
                <a asp-action="GetTeachers" asp-controller="Admin" class="btn btn-warning">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
