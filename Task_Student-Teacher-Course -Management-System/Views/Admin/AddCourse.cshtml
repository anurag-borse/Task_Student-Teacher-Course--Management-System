@model Task_Student_Teacher_Course__Management_System.Models.Course

@{
    ViewData["Title"] = "AddCourse";
}

<h1 class="text-center my-4">Add Course</h1>
<hr />

<div class="container">
    <form asp-action="AddCourse" asp-controller="Admin">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="form-group row mb-4">
            <label class="col-sm-2 col-form-label">Course Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="CourseName" placeholder="Enter Course Name">
                <span asp-validation-for="CourseName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-4">
            <label asp-for="CourseFee" class="col-sm-2 col-form-label">Course Fee</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="CourseFee" placeholder="Enter Course Fee">
                <span asp-validation-for="CourseFee" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-4">
            <label asp-for="TeacherName" class="col-sm-2 col-form-label">Teacher</label>
            <div class="col-sm-10">
                <select class="form-control" asp-for="TeacherName">
                    <option value="NA">Select a Teacher</option>
                    @foreach (var teacher in ViewBag.Teachers)
                    {
                        <option value="@teacher.Text">@teacher.Text</option>
                    }
                </select>
                <span asp-validation-for="TeacherName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <input type="submit" value="Create" class="btn btn-primary mr-2" />
                <a asp-action="GetCourses" asp-controller="Admin" class="btn btn-warning">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
