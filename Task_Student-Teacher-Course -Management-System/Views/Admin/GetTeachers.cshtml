@model List<Task_Student_Teacher_Course__Management_System.Models.Teacher>

@{
    ViewData["Title"] = "GetTeachers";
}


@* for sweet alert  *@
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<h1>GetTeachers</h1>

<p>
    <a asp-action="AddTeacher" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                FirstName
            </th>
            <th>
                LastName
            </th>
            <th>
                Salary
            </th>
            <th>
                Course
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course)
                </td>
                <td>
                    <a asp-controller="Admin" asp-action="EditTeacher" asp-route-id="@item.TeacherId" class="btn btn-info">Edit</a>
                    <a asp-controller="Admin" asp-action="DeleteTeacher" asp-route-id="@item.TeacherId" class="btn btn-danger deleteButton">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<script>
    document.querySelectorAll('.deleteButton').forEach(button => {
        button.addEventListener('click', function (event) {
            event.preventDefault();
            const href = this.getAttribute('href');
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, Delete this Teacher!'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire(
                        'Deleted!',
                        'This teacher has been deleted.',
                        'success'
                    ).then(() => {
                        window.location.href = href;
                    });
                }
            })
        });
    });
</script>