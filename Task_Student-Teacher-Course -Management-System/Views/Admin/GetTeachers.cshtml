@model List<Task_Student_Teacher_Course__Management_System.Models.Teacher>

@{
    ViewData["Title"] = "GetTeachers";
}

<h1>GetTeachers</h1>

<p>
    <a asp-action="AddTeacher" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                FirstName
            </th>
            <th>
                LastName
            </th>
            <th>
                Salary
            </th>
            <th>
                Course
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TeacherId" class="btn btn-info">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.TeacherId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
